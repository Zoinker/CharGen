extends layout


block content
	h1= title
	p Create your fantasy character!
  
	form(method='post')
		div.info
			span.label Race
			select
				each race, i in races
					option(value=i) #{race}
			span.label Gender
			select
				each sex, i in genders
					option(value=i) #{sex}
			span.label Age
			input(type="number", min="16", max="50", step="1", value="25")
			span.label Name
			input(type="text", value="Chara")
		div.attrib
			span.label Attributes
			div.str
				span.label Strength
				input(type="number", min="0", max="10", step="1", value ="5")
			div.agi
				span.label Agility
				input(type="number", min="0", max="10", step="1", value ="5")
			div.cnst
				span.label Constitution
				input(type="number", min="0", max="10", step="1", value ="5")
			div.int
				span.label Intelligence
				input(type="number", min="0", max="10", step="1", value ="5")
			div.char
				span.label Charisma
				input(type="number", min="0", max="10", step="1", value ="5")
			div.points
				p Points Left: #{points}
  
		div: button Generate
		

	
	
  
  
